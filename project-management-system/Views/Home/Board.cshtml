@model TaskModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <link rel="stylesheet" type="text/css" href="~/css/board.css">
        <link rel="stylesheet" type="text/css" href="~/css/task.css">

    </head>

    <form asp-controller="Board" role="form" method="post" enctype="multipart/form-data" id="boardMainPage">


        <div class="container">

            <div class="board-layout" style="border-radius: 15px">
                <div class="left">
                    <div class="board-text">Task board</div>
                </div>

                <div id='boardlists' class="board-lists">
                    @foreach (var item in Model.statuses)
                    {
                    <div id='@item' class="board-list" ondrop="dropIt(event)" ondragover="allowDrop(event)">
                        <div class="list-title">
                            @item
                        </div>

                        @foreach (var task in Model.GetTasksByStatus(item))
                        {
                            <div id='@item task1' class="card" draggable="true" ondragstart="dragStart(event)">
                                <b>Task Title @item</b>
                                Priority: Major
                                <a asp-controller="Board" asp-action="Task" asp-route-id="@task["taskId"]">View task</a>
                                @*UNCOMMENT LINE BELLOW IF YOU WANT TO USE MODAL*@
                                @*<a href="#exampleModalCenter" data-toggle="modal" data-target="#exampleModalCenter_@item" data-id="@item">View task</a>*@
                            </div>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCenter_@item" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            @item
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                    }

                </div>
            </div>
            <script src='~/js/dragdropswap.js'></script>
        </div>

       

        <body>


        </body>
    </form>